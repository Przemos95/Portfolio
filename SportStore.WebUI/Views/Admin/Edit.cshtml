@model SportStore.Domain.Entities.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edycja</h2>

@using (Html.BeginForm("Edit", "Admin"))
{
    <div class="panel-body">
        @Html.HiddenFor(p => p.ProductID)

    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, null, new { @class = "form-control"})
        @Html.ValidationMessageFor(p => p.Name, null, new { @class = "error" })
    </div>

    <div>
        @Html.LabelFor(p => p.Description)
        @Html.TextBoxFor(p => p.Description, null, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(p => p.Description, null, new { @class = "error"})
    </div>

    <div>
        @Html.LabelFor(p => p.Category)
        @Html.TextBoxFor(p => p.Category, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Category, null, new { @class = "error" })
    </div>

    <div>
        @Html.LabelFor(p => p.Price)
        @Html.TextBoxFor(p => p.Price, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Price, null, new { @class = "error" })
    </div>
    <div class="panel-footer">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-default" })
    </div>
}
